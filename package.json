{
  "name": "hono-neon-drizzle-template",
  "type": "module",
  "scripts": {
    "dev": "npx vite dev",
    "old:dev": "wrangler dev src/index.ts",
    "old:deploy": "wrangler deploy --minify src/index.ts",
    "deploy": "npx vite build --mode client && npx vite build && npx wrangler pages deploy",
