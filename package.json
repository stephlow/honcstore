    "@neondatabase/serverless": "^0.9.3",
    "@types/classnames": "^2.3.1",
    "bcrypt-edge": "^0.0.6",
    "classnames": "^2.5.1",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "@cloudflare/workers-types": "^4.20240712.0",
    "@hono/vite-dev-server": "^0.13.1",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.22.6",
